<p id="notice"><%= notice %></p>

<h1>Dishes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Ready in minutes</th>
      <th>Image</th>
      <th>Summary</th>
      <th>Sourceurl</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dishes.each do |dish| %>
      <tr>
        <td><%= dish.title %></td>
        <td><%= dish.ready_in_minutes %></td>
        <td><%= dish.image %></td>
        <td><%= dish.summary %></td>
        <td><%= dish.sourceurl %></td>
        <td><%= link_to 'Show', dish %></td>
        <td><%= link_to 'Edit', edit_dish_path(dish) %></td>
        <td><%= link_to 'Destroy', dish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dish', new_dish_path %>
